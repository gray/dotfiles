# scalar options
print_escapes  = 1

# hash options
hash_separator = ' => '

# general options
caller_info = 1
deparse     = 1

# object output
class.parents      = none
class.show_methods = none

filters = ContentType, DateTime, DB, Digest, Web
filter_datetime.show_class_name = 1
filter_web.show_request_in_response = 1
